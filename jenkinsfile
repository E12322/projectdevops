pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/E12322/projectdevops.git'
            }
        }

        stage('Build') {
            steps {
                // Build sans lancer les tests
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test Maven') {
            steps {
                sh 'mvn -version'
            }
        }
    }
}
